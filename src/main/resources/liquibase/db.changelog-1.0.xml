<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">


    <changeSet id="1.0.0" author="Anton.Yakubenko">
        <createTable tableName="users">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="username" type="VARCHAR(100)" >
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="First_Name" type="VARCHAR(100)" >
                <constraints nullable="false" />
            </column>

            <column name="Last_Name" type="VARCHAR(100)" >
                <constraints nullable="false" />
            </column>

            <column name="password" type="VARCHAR(255)" >
                <constraints nullable="false" />
            </column>

            <column name="email" type="VARCHAR(255)" >
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="status" type="VARCHAR(25)" defaultValue="ACTIVE">
                <constraints nullable="false" />
            </column>

            <column name="created" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false" />
            </column>

            <column name="updated" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false" />
            </column>

        </createTable>
    </changeSet>


    <changeSet id="1.0.1" author="Anton.Yakubenko">
        <createTable tableName="roles">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(100)" >
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="status" type="VARCHAR(25)" defaultValue="ACTIVE">
                <constraints nullable="false" />
            </column>

            <column name="created" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false" />
            </column>

            <column name="updated" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false" />
            </column>

        </createTable>
    </changeSet>


    <changeSet id="1.0.2" author="Anton.Yakubenko">
        <createTable tableName="user_roles">

            <column name="user_id" type="BIGINT">
            </column>

            <column name="role_id" type="BIGINT" >
            </column>

        </createTable>
    </changeSet>

    <changeSet id="1.0.3" author="Anton.Yakubenko">
        <addForeignKeyConstraint baseTableName="user_roles"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_roles_user"
                                 onUpdate="CASCADE"
                                 onDelete="RESTRICT"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="1.0.4" author="Anton.Yakubenko">
        <addForeignKeyConstraint baseTableName="user_roles"
                                 baseColumnNames="role_id"
                                 constraintName="fk_user_roles_roles"
                                 onUpdate="CASCADE"
                                 onDelete="RESTRICT"
                                 referencedTableName="roles"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="1.0.5" author="Anton.Yakubenko">

        <insert tableName="roles">
            <column name="name" value="ROLE_USER"/>
        </insert>

        <insert tableName="roles">
            <column name="name" value="ROLE_ADMIN"/>
        </insert>

    </changeSet>
</databaseChangeLog>